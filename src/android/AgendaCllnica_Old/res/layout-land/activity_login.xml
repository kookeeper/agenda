<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:id="@+id/loginLayout"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:paddingBottom="@dimen/activity_vertical_margin"
   android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingTop="@dimen/activity_vertical_margin"
   tools:context=".MainActivity" >

   <TextView
       android:id="@+id/tituloView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="0dp"
       android:text="@string/titulo"
       android:textAppearance="?android:attr/textAppearanceLarge" />

   <TextView
       android:id="@+id/loginView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/tituloView"
       android:layout_marginTop="20dp"
       android:text="@string/login"
       android:textAppearance="?android:attr/textAppearanceMedium" />

   <EditText
       android:id="@+id/loginEdit"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/loginView"
       android:layout_marginLeft="16dp"
       android:layout_toRightOf="@+id/loginView"
       android:ems="10"
       android:hint="@string/digite_login" >

      <requestFocus />
   </EditText>

   <TextView
       android:id="@+id/senhaView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/loginView"
       android:layout_below="@+id/loginView"
       android:layout_marginTop="19dp"
       android:text="@string/senha"
       android:textAppearance="?android:attr/textAppearanceMedium" />

   <EditText
       android:id="@+id/senhaEdit"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/senhaView"
       android:layout_alignLeft="@+id/loginEdit"
       android:ems="10"
       android:hint="@string/digite_senha"
       android:inputType="textPassword" />

   <Button
       android:id="@+id/loginButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/senhaEdit"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="47dp"
       android:onClick="login"
       android:text="@string/login" />

   <TextView
       android:id="@+id/tentativasView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/senhaView"
       android:layout_below="@+id/senhaView"
       android:layout_marginLeft="30dp"
       android:layout_marginTop="24dp"
       android:text="@string/tentativas"
       android:textAppearance="?android:attr/textAppearanceMedium" />

   <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignRight="@+id/tituloView"
      android:layout_alignTop="@+id/tentativasView"
      android:text="TextView" />

</RelativeLayout>