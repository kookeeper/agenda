<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/visualizar_compromisso_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/data_compromisso_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/id_compromisso_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data_compromisso_text_view" />

    <Button
        android:id="@+id/botao_voltar_visualizar_compromisso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_compromisso_text_view"
        android:text="@string/voltar" />

</RelativeLayout>